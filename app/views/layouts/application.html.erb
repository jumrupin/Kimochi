<!DOCTYPE html>
<html>
  <head>
    <title>Kimochi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <nav class="navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand" href="#">feelings</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%=link_to 'ホーム', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%=link_to 'マイページ', user_path(current_user.id), class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%=link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%=link_to 'ホーム', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%=link_to 'サービス概要', home_index_path, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%=link_to '新規会員登録', new_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%=link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
      <form class="form-inline my-2 my-md-0">
        <%= form_with url: root_path, method: :get, local: true do |f| %>
          <%= f.text_field :search, :placeholder => "検索ワード"%>
          <% f.submit %>
        <% end %>
      </form>
    </div>
  </nav>






















      <main class='container'>
        <%= yield %>
      </main>

  </body>
</html>
