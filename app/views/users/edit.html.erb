<%= form_for(@user) do |f| %>

  <%= render 'layouts/error', user: @user%>
  <div class='field'>
    <label for>お名前</label></br>
    <%= f.text_field :first_name, class: "first_name", :placeholder => '姓' %>
    <%= f.text_field :last_name, class: "last_name", :placeholder => '名' %>
  </div></br>

  <div class='field'>
    <%= f.label :user_image, 'プロフィール画像' %></br>
    <%= f.attachment_field :user_image, class: "user_image" %>
  </div></br>

  <div class='field'>
    <%= f.label :introduction, '自己紹介文' %></br>
    <%= f.text_area :introduction, class: "introduction" %>
  </div></br>

  <%= f.submit %>
<% end %>
